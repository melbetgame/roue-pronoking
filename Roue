  </div>  <script>
    // Configuration des montants
    const SEGMENTS = ["10€","20€","5€","100€","200€","250€","300€","500€","1000€"];
    const COLORS = ["#ffbf00","#ff5c5c","#ffd166","#7ae582","#7cc8ff","#c08bff","#ff7ab6","#ffa94d","#6ee7b7"];

    const canvas = document.getElementById('wheel');
    const ctx = canvas.getContext('2d');
    const cw = canvas.width, ch = canvas.height, cx = cw/2, cy = ch/2, radius = Math.min(cw,ch)/2 - 30;

    let startAngle = 0;
    const segCount = SEGMENTS.length;
    function drawWheel(){
      ctx.clearRect(0,0,cw,ch);
      const arc = (Math.PI*2)/segCount;
      for(let i=0;i<segCount;i++){
        const angle = startAngle + i*arc;
        ctx.beginPath();
        ctx.moveTo(cx,cy);
        ctx.arc(cx,cy,radius,angle,angle+arc,false);
        ctx.closePath();
        ctx.fillStyle = COLORS[i % COLORS.length];
        ctx.fill();
        // stroke
        ctx.lineWidth = 4; ctx.strokeStyle = 'rgba(11,11,18,0.6)'; ctx.stroke();
        // text
        ctx.save();
        ctx.translate(cx,cy);
        ctx.rotate(angle + arc/2);
        ctx.textAlign = 'right';
        ctx.fillStyle = '#061021';
        ctx.font = 'bold 28px Rubik';
        ctx.fillText(SEGMENTS[i], radius - 20, 10);
        ctx.restore();
      }
      // center
      ctx.beginPath(); ctx.arc(cx,cy,60,0,Math.PI*2); ctx.fillStyle='#071127'; ctx.fill();
      ctx.fillStyle='white'; ctx.font='600 18px Rubik'; ctx.textAlign='center'; ctx.fillText('PRONOKINGS',cx,cy+6);
    }

    drawWheel();

    // build legend
    const legend = document.getElementById('legend');
    SEGMENTS.forEach((s,i)=>{
      const div = document.createElement('div'); div.className='chip'; div.textContent = s; div.style.background = 'linear-gradient(90deg, rgba(255,255,255,0.02), rgba(0,0,0,0.03))'; legend.appendChild(div);
    });

    // Spin logic
    const spinBtn = document.getElementById('spin');
    const modal = document.getElementById('modal');
    const winAmountEl = document.getElementById('winAmount');
    const claimBtn = document.getElementById('claimBtn');
    const closeBtn = document.getElementById('closeBtn');
    const resultText = document.getElementById('resultText');

    let isSpinning = false;

    function randomInt(min,max){return Math.floor(Math.random()*(max-min+1))+min}

    function easeOut(t){return 1 - Math.pow(1-t,3)}

    spinBtn.addEventListener('click', ()=>{
      if(isSpinning) return;
      isSpinning = true;
      resultText.textContent = 'La roue tourne... bonne chance !';
      // choose a random segment index
      const chosenIndex = randomInt(0,segCount-1);
      // compute target angle so that chosenIndex aligns with pointer (top)
      const arc = (Math.PI*2)/segCount;
      // pointer is at -Math.PI/2 (top). We want chosen segment center to end at that angle.
      const targetAngle = (Math.PI*2)*randomInt(5,8) + (Math.PI*2 - (chosenIndex*arc + arc/2) + Math.PI/2);
      const duration = 4200 + randomInt(0,1200); // ms
      const start = performance.now();
      const from = startAngle;
      function animate(now){
        const elapsed = now - start;
        const t = Math.min(1, elapsed/duration);
        const eased = easeOut(t);
        startAngle = from + (targetAngle - from) * eased;
        drawWheel();
        if(t < 1){
          requestAnimationFrame(animate);
        } else {
          isSpinning = false;
          // normalize startAngle
          startAngle = startAngle % (Math.PI*2);
          // determine landed index
          const landed = Math.floor(((Math.PI*2 - (startAngle - Math.PI/2)) % (Math.PI*2)) / arc);
          const amount = SEGMENTS[landed];
          // show modal
          winAmountEl.innerHTML = `Vous avez gagné <strong>${amount}</strong>`;
          claimBtn.href = `promo.html?amount=${encodeURIComponent(amount)}`;
          modal.style.display = 'flex';
          resultText.innerHTML = `🎉 Félicitations ! Vous avez gagné <strong>${amount}</strong>.`;
          // small confetti using simple dots
          burstConfetti();
        }
      }
      requestAnimationFrame(animate);
    });

    closeBtn.addEventListener('click', (e)=>{e.preventDefault(); modal.style.display='none'});

    claimBtn.addEventListener('click', ()=>{ /* user will navigate to promo.html */ });

    // simple confetti effect
    function burstConfetti(){
      const c = document.createElement('canvas');
      c.width = innerWidth; c.height = innerHeight; c.style.position='fixed'; c.style.left='0'; c.style.top='0'; c.style.zIndex='50'; document.body.appendChild(c);
      const g = c.getContext('2d');
      const pieces = [];
      for(let i=0;i<60;i++){
        pieces.push({x:cx, y:cy, vx:(Math.random()-0.5)*12, vy:(Math.random()-0.9)*14, r:Math.random()*6+2, c:COLORS[Math.floor(Math.random()*COLORS.length)]});
      }
      let t0 = performance.now();
      function step(now){
        const dt = (now - t0)/1000; t0 = now;
        g.clearRect(0,0,c.width,c.height);
        for(const p of pieces){ p.x += p.vx*dt*60; p.y += p.vy*dt*60; p.vy += 0.6; g.fillStyle=p.c; g.beginPath(); g.arc(p.x,p.y,p.r,0,Math.PI*2); g.fill(); }
      }
      let frames = 0;
      const id = setInterval(()=>{ frames++; if(frames>60){ clearInterval(id); document.body.removeChild(c);} else requestAnimationFrame(step); },16);
    }

    // redraw on resize
    window.addEventListener('resize', ()=>{drawWheel()});

  </script></body>
