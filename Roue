    function getQuery(){ const q = {}; location.search.substring(1).split('&').forEach(p=>{ if(!p) return; const [k,v]=p.split('='); q[decodeURIComponent(k)]=decodeURIComponent(v||''); }); return q }
    const q = getQuery();
    const amount = q.amount || '—';
    document.getElementById('wonAmount').textContent = amount;
